{
  "app": {
    "name": "bid command service",
    "environment": "${APP_ENV:-development}",
    "version": "1.0.0"
  },
  "network": {
    "Port": ${PORT:-8080},
    "IsLocalHost": false,
    "ssl": {
      "enabled": false,
      "certFile": "",
      "keyFile": "",
      "caFile": ""
    }
  },
  "Cors": {
    "isEnabled": true,
    "allowOrigins": ["http://localhost:5173", "http://localhost:8080", "http://localhost:8081", "http://localhost:8082", "http://localhost:8083"],
    "allowMethods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"],
    "allowHeaders": ["Authorization", "Content-Type", "X-Requested-With", "Idempotency-Key"],
    "exposeHeaders": ["ETag"],
    "allowCredentials": true,
    "allowMaxAge": 600
  },
  "Swagger": {
    "IsEnabled": true,
    "Title": "Bid Command Service API",
    "OpenApiName": "openapi"
  },
  "Pprof": {
    "IsEnabled": true,
    "Port": 6060
  },
  "Logger": {
    "level": "${LOG_LEVEL:-debug}",
    "format": "console",
    "output": "stdout",
    "filePath": "./log/bid.log"
  },
  "Postgres": {
    "user": "${PGDB_USER:-postgres}",
    "host": "${PGDB_HOST:-postgres}",
    "port": ${PGDB_PORT:-5432},
    "dbName": "${PGDB_DBNAME:-bid_command}",
    "params": "",
    "maxIdleConns": 2,
    "maxOpenConns": 10,
    "connMaxLifetimeMinutes": 30,
    "sslEnabled": false,
    "sslMode": "disable",
    "logLevel": 4
  },
  "redis": {
    "Addr": "${REDIS_HOST:-redis}",
    "port": ${REDIS_PORT:-6379},
    "poolSize": 10,
    "password": "${REDIS_PASSWORD:-}"
  },
  "KafkaWriter": {
    "brokers": ["${KAFKA_BROKER:-kafka:9092}"],
    "topic": "",
    "clientId": "bid-command-service"
  }
}