{
  "app": {
    "name": "bid projector service",
    "environment": "development",
    "version": "1.0.0"
  },
  "network": {
    "Port": 8080,
    "IsLocalHost": false,
    "ssl": {
      "enabled": false,
      "certFile": "",
      "keyFile": "",
      "caFile": ""
    }
  },
  "Logger": {
    "level": "debug",
    "format": "console",
    "output": "stdout",
    "filePath": "./log/bid-projector.log"
  },
  "Mongo": {
    "user": "root",
    "URI": "mongodb://root:root@mongo:27017/bid_query?authSource=admin",
    "dbName": "bid_query",
    "TLS": false,
    "ConnectTimeoutSec": 20,
    "ServerSelectionSec": 20,
    "MaxPoolSize": 10,
    "MinPoolSize": 1
  },
  "redis": {
    "Addr": "redis",
    "port": 6379,
    "poolSize": 10,
    "password": ""
  },
  "KafkaReader": {
    "brokers": ["kafka:9092"],
    "groupTopics": ["bids.placed"],
    "groupId": "bid-projector-v1"
  }
}
