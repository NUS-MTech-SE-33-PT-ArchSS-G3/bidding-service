{
  "app": {
    "name": "bid query service",
    "environment": "development",
    "version": "1.0.0"
  },
  "network": {
    "Port": 8083,
    "IsLocalHost": false,
    "ssl": {
      "enabled": false,
      "certFile": "",
      "keyFile": "",
      "caFile": ""
    }
  },
  "Cors": {
    "isEnabled": true,
    "allowOrigins": ["http://localhost:5173", "http://localhost:8080", "http://localhost:8081", "http://localhost:8083"],
    "allowMethods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"],
    "allowHeaders": ["Authorization", "Content-Type", "X-Requested-With"],
    "exposeHeaders": ["ETag"],
    "allowCredentials": true,
    "allowMaxAge": 600
  },
  "Swagger": {
    "IsEnabled": true,
    "Title": "Bid Query Service API",
    "OpenApiName": "openapi"
  },
  "Pprof": {
    "IsEnabled": true,
    "Port": 6060
  },
  "Logger": {
    "level": "debug",
    "format": "console",
    "output": "stdout",
    "filePath": "./log/bid.log"
  },
  "Mongo": {
    "user": "root",
    "password": "root",
    "URI": "mongodb://root:root@mongo.biddergod-dev.local:27017/bid_query?authSource=admin",
    "dbName": "bid_query",
    "TLS": false,
    "ConnectTimeoutSec": 20,
    "ServerSelectionSec": 20,
    "MaxPoolSize": 10,
    "MinPoolSize": 1
  },
  "redis": {
    "Addr": "redis.biddergod-dev.local",
    "port": 6379,
    "poolSize": 10,
    "password": ""
  },
  "KafkaReader": {
    "brokers": ["kafka.biddergod-dev.local:9092"],
    "topic": "bids.placed",
    "groupId": "bid-projector-v1"
  }
}
